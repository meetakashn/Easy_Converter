<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lengthback"
    tools:context=".FLength">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_0sdp"
        android:layout_marginTop="@dimen/_21sdp"
        android:background="@color/pinegreen" />

    <EditText
        android:id="@+id/value1"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_toStartOf="@+id/spin1"
        android:autofillHints=""
        android:background="#FF7070"
        android:backgroundTint="#00B0FF"
        android:drawableRight="@android:drawable/ic_menu_edit"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/value"
        android:inputType="number"
        android:textColorHint="#FFFFFF"
        android:textSize="@dimen/_20ssp"
        tools:ignore="TouchTargetSizeCheck,VisualLintTextFieldSize,TextContrastCheck" />

    <Spinner
        android:id="@+id/spin1"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_32sdp"
        android:layout_marginEnd="@dimen/_11sdp"
