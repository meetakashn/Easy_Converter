        android:drawableRight="@drawable/cm_inch_measure_svgrepo_com"
        android:fadingEdge="horizontal"
        android:gravity="left"
        android:shadowColor="#000000"
        android:text="   KiloMeter"
        android:textColor="#EF0000"
        android:textSize="@dimen/_15ssp"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="@dimen/_155sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_36sdp"
        android:layout_marginEnd="@dimen/_0sdp"
        android:background="#FB8C00"
        android:drawableRight="@drawable/cm_inch_length_svgrepo_com"
        android:fadingEdge="horizontal"
        android:gravity="left"
        android:shadowColor="#000000"
        android:text="   Inch"
        android:textColor="#000000"
        android:textSize="@dimen/_15ssp"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/IN1"
        android:layout_width="@dimen/_155sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignTop="@+id/KM1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_0sdp"
        android:layout_marginTop="@dimen/_36sdp"
        android:layout_marginEnd="@dimen/_8sdp"
