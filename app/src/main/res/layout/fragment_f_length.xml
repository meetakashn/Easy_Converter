        android:id="@+id/button"
        android:layout_width="@dimen/_117sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_39sdp"
        android:layout_marginTop="@dimen/_300sdp"
        android:backgroundTint="#FFD600"
        android:drawableLeft="@drawable/baseline_sync_24"
        android:text="Convert"
        android:textColor="#0C0505"
        android:textColorHint="#000000"
        app:icon="@drawable/baseline_sync_24"
        app:iconTint="#000000" />

    <Button
        android:id="@+id/clear"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_162sdp"
        android:layout_marginTop="@dimen/_376sdp"
        android:backgroundTint="#FF0000"
        android:gravity="center"
        android:text="Clear"
        android:textColorHighlight="#00FFFFFF"
        app:iconTint="#FFFFFF" />


