        android:gravity="left"
        android:shadowColor="#000000"
        android:text="   CentiMeter"
        android:textColor="#EF0000"
        android:textSize="@dimen/_15ssp"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="@dimen/_156sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/spin1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_48sdp"
        android:layout_marginEnd="@dimen/_0sdp"
        android:background="#FB8C00"
        android:drawableRight="@drawable/cm_inch_measure_svgrepo_com"
        android:fadingEdge="horizontal"
        android:gravity="left"
        android:shadowColor="#000000"
        android:text="   MilliMeter"
        android:textColor="#000000"
        android:textSize="@dimen/_15ssp"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/MM1"
        android:layout_width="@dimen/_155sdp"
        android:layout_height="@dimen/_30sdp"
