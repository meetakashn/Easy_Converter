        android:fontFamily="sans-serif-condensed"
        android:gravity="right"
        android:text="000.00"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_15ssp" />

    <TextView
        android:id="@+id/KM1"
        android:layout_width="@dimen/_155sdp"
        android:layout_height="@dimen/_30sdp"
